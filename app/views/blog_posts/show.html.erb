<p id="notice"><%= notice %></p>

<div class="panel panel-primary">
	<div class="panel-heading">
		<p><%= @blog_post.title %></p>
	</div>
	<div class="panel-body">
		<p><%= @blog_post.author %></p>
		<p>submitted at: <%= @blog_post.created_at %></p>
		<p><%= @blog_post.blog_entry %></p>
	</div>
</div>


<%= link_to 'Edit', edit_blog_post_path(@blog_post) %> |
<%= link_to 'Back', blog_posts_path %>
<br>
<br>
<div class="panel panel-success">
		<div class="panel-heading">
			Make a Comment
		</div>
		<div class"panel-body">
			<%= render 'comments/form' %>
		</div>
		<br>
</div>


<div class="panel panel-default">
	<div class="panel-header">
		<h4>Comments</h4>
	</div>
	<% @blog_post.comments.each do |comment| %>
	<div class="panel-body">
		<p><strong><%= comment.author %></strong> said: </p>
		<p><%= comment.comment_entry %></p>
		<p>submitted at: <%= comment.created_at %></p>
	</div>
	<% end %>
</div>

<br><br>
<%= link_to 'Edit', edit_blog_post_path(@blog_post) %> |
<%= link_to 'Back', blog_posts_path %>
<br>
<br>